<Window x:Class="Plutonium.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Plutonium"
        SizeToContent="WidthAndHeight"
        ResizeMode="CanMinimize"
        Closing="Window_Closing" WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="☢ Plutonium ☢" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="46" FontWeight="Bold"/>
            <TextBlock Text="Выбор сервера:" HorizontalAlignment="Center" VerticalAlignment="Center"  FontSize="24"/>
            <ComboBox Name="ServerList" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
                      IsEditable="True" SelectedIndex="0"  Margin="0,10"  FontSize="14" />
            <Button Name="ConnectButton" Click="ServerListConnect_Click" Content="Запуск"  FontSize="24" />
        </StackPanel>
    </Grid>

</Window>